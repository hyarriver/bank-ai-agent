{
  "version": 2,
  "builds": [
    {
      "src": "backend/**",
      "use": "dockerfile",
      "config": {
        "dockerfile": "backend/Dockerfile"
      }
    },
    {
      "src": "frontend/**",
      "use": "@zeabur/node",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist"
      }
    }
  ]
}

